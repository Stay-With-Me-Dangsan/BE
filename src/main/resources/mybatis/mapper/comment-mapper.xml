<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="stay.with.me.api.model.mapper.CommentMapper">

    <select id="findAllByPostId" parameterType="long" resultType="stay.with.me.api.model.dto.CommentDTO">
        SELECT * FROM comment WHERE post_id = #{postId}
    </select>

    <select id="findById" parameterType="long" resultType="stay.with.me.api.model.dto.CommentDTO">
        SELECT * FROM comment WHERE comment_id = #{id}
    </select>

    <insert id="insert" parameterType="stay.with.me.api.model.dto.CommentDTO">
        INSERT INTO comment (post_id, user_id, content, created_at, updated_at)
        VALUES (#{postId}, #{userId}, #{content}, NOW(), NOW())
    </insert>

    <update id="update" parameterType="stay.with.me.api.model.dto.CommentDTO">
        UPDATE comment
        SET content = #{content}, updated_at = NOW()
        WHERE comment_id = #{commentId}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM comment WHERE comment_id = #{id}
    </delete>
</mapper>
